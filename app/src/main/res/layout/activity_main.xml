<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀"
                android:textSize="40sp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APK Builder Pro"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Build &amp; Deploy Android APKs"
                    android:textColor="#B0BEC5"
                    android:textSize="14sp"
                    android:letterSpacing="0.01" />

            </LinearLayout>

        </LinearLayout>

        <!-- Input Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1E293B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- GitHub Token Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔑 GitHub Token"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/githubTokenInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ghp_xxxxxxxxxxxxxxxxxxxx"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#94A3B8"
                    android:textSize="15sp"
                    android:background="#0F172A"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Repository Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📦 Select Repository"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Spinner
                    android:id="@+id/repoSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0F172A"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/fetchReposBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔄 Fetch Repositories"
                    android:textColor="#FFFFFF"
                    android:background="#10B981"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_gravity="end" />

                <!-- Telegram Bot Token -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🤖 Telegram Bot Token"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/botTokenInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#94A3B8"
                    android:textSize="15sp"
                    android:background="#0F172A"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- User ID Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Telegram User ID"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/userIdInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="123456789"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#94A3B8"
                    android:textSize="15sp"
                    android:background="#0F172A"
                    android:inputType="number"
                    android:padding="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Build Configuration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#1E293B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Build Configuration"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Spinner
                    android:id="@+id/buildTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0F172A"
                    android:padding="16dp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/buildBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🚀 START BUILD"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#10B981"
            android:paddingVertical="18dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/testConnectionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔗 TEST TELEGRAM CONNECTION"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#10B981"
            android:paddingVertical="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#0F172A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Build Status"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Ready to build Android projects!\n\nEnter your GitHub token and click 'Fetch Repositories' to start."
                    android:textColor="#CBD5E1"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    android:indeterminateTint="#10B981" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
