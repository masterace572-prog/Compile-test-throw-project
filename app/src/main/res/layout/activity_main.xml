<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1116"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ APK Builder Pro"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:padding="16dp" />

        <!-- GitHub Repo Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub Repository URL:"
            android:textColor="#E1E1E1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/repoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://github.com/username/repository"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#1E1E2E"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- GitHub Token Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GitHub Token:"
            android:textColor="#E1E1E1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/githubTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ghp_xxxxxxxxxxxxxxxxxxxx"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#1E1E2E"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword" />

        <!-- Bot Token Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram Bot Token:"
            android:textColor="#E1E1E1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/botTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#1E1E2E"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:inputType="textPassword" />

        <!-- User ID Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram User ID:"
            android:textColor="#E1E1E1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/userIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="123456789"
            android:textColorHint="#888888"
            android:textColor="#FFFFFF"
            android:background="#1E1E2E"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:inputType="number" />

        <!-- Build Type Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Build Type:"
            android:textColor="#E1E1E1"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/buildTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E2E"
            android:padding="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/buildBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ Start Build"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/testConnectionBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”— Test Telegram Connection"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Status Display -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to build Android projects! Enter your details above to start building."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:background="#1A1A2E"
            android:padding="20dp" />

    </LinearLayout>

</ScrollView>
